{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [{ "Name": "Console" }],
    "Enrich": ["FromLogContext"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PatientDb": "Host=localhost;Database=dialysis_patient;Username=postgres;Password=postgres"
  },
  "Authentication": {
    "JwtBearer": {
      "Authority": "https://login.microsoftonline.com/common/v2.0",
      "Audience": "api://dialysis-pdms",
      "RequireHttpsMetadata": true
    }
  }
}

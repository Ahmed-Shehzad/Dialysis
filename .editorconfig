# Top-level EditorConfig file for this repository.
root = true

[*]
# Global defaults for all files.
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.cs]
# C# formatting and style preferences.
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = one_less_than_current
csharp_using_directive_placement = outside_namespace:suggestion
csharp_style_namespace_declarations = file_scoped:suggestion
csharp_preserve_single_line_statements = true
csharp_preserve_single_line_blocks = true
csharp_prefer_braces = false:error

# .NET style conventions.
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion
dotnet_style_require_accessibility_modifiers = for_non_interface_members:error
dotnet_style_readonly_field = true:error
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion
dotnet_style_prefer_auto_properties = true:suggestion
dotnet_style_prefer_compound_assignment = true:suggestion
dotnet_style_prefer_inferred_tuple_names = true:suggestion
dotnet_style_prefer_inferred_anonymous_type_member_names = true:suggestion
dotnet_style_prefer_explicit_tuple_names = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_prefer_null_propagation = true:suggestion
dotnet_style_prefer_simplified_boolean_expressions = true:suggestion
dotnet_style_prefer_simplified_interpolation = true:suggestion
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion
dotnet_style_prefer_coalesce_expression = true:suggestion
dotnet_style_operator_placement_when_wrapping = beginning_of_line

# C# implicit/explicit typing preferences.
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Expression-bodied members and modern C# features.
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_constructors = false:suggestion
csharp_style_expression_bodied_operators = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_throw_expression = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion
csharp_style_prefer_tuple_swap = true:suggestion
csharp_style_inlined_variable_declaration = true:suggestion
csharp_style_deconstructed_variable_declaration = true:suggestion
csharp_style_prefer_simple_using_statement = true:suggestion
csharp_style_prefer_not_pattern = true:suggestion
csharp_style_prefer_extended_property_pattern = true:suggestion
csharp_style_prefer_index_operator = true:suggestion
csharp_style_prefer_range_operator = true:suggestion
csharp_style_implicit_object_creation_when_type_is_apparent = true:suggestion
csharp_style_prefer_static_local_function = true:suggestion
csharp_style_unused_value_expression_statement_preference = discard_variable:suggestion
csharp_style_unused_value_assignment_preference = discard_variable:suggestion

# Primary constructor preferences.
dotnet_style_prefer_primary_constructors = true:suggestion

# Analyzer severities and code-quality settings.
dotnet_diagnostic.IDE0005.severity = error
dotnet_diagnostic.IDE0051.severity = error
dotnet_diagnostic.IDE0052.severity = error
dotnet_diagnostic.IDE0058.severity = error
dotnet_diagnostic.IDE0059.severity = error
dotnet_diagnostic.IDE0060.severity = error
dotnet_diagnostic.IDE0290.severity = suggestion
dotnet_diagnostic.CS0168.severity = warning
dotnet_diagnostic.CS0219.severity = warning
dotnet_diagnostic.CS0414.severity = warning
dotnet_code_quality_unused_parameters = non_public
dotnet_diagnostic.IDE0011.severity = error
dotnet_diagnostic.IDE0055.severity = error

########################################
# .NET SDK Analyzer suppressions (CA####)
# Suppress noisy rules that don't add value for this project.
########################################

# Identifiers should not contain underscores (conflicts with test naming conventions)
dotnet_diagnostic.CA1707.severity = none

# Use LoggerMessage delegates for performance (too noisy; prefer readability)
dotnet_diagnostic.CA1848.severity = none

# Avoid expensive log argument evaluation (related to CA1848)
dotnet_diagnostic.CA1873.severity = none

# Rename type so it does not end in 'EventHandler', 'Queue', etc. (false positives on domain types)
dotnet_diagnostic.CA1711.severity = none

# Member explicitly initialized to default value (harmless readability preference)
dotnet_diagnostic.CA1805.severity = none

# Identifier contains type name (false positive on descriptive parameter names like 'guid')
dotnet_diagnostic.CA1720.severity = none

# Use ObjectDisposedException.ThrowIf (suggestion, not critical)
dotnet_diagnostic.CA1513.severity = suggestion

# CancellationToken should be the last parameter (valid but noisy for existing APIs)
dotnet_diagnostic.CA1068.severity = suggestion

# Change return type for improved performance (micro-optimization, low value)
dotnet_diagnostic.CA1859.severity = suggestion

# Member does not access instance data and can be marked as static
dotnet_diagnostic.CA1822.severity = suggestion

# Behavior could vary based on locale (valid for parsing, keep as suggestion)
dotnet_diagnostic.CA1305.severity = suggestion

# Use 'Array.Empty<T>()' (keep as suggestion)
dotnet_diagnostic.CA1861.severity = suggestion

# Instantiate argument exceptions correctly (overlaps with S3928)
dotnet_diagnostic.CA2208.severity = none

# Ensure DisposeAsync calls base class (noisy for generated/framework code)
dotnet_diagnostic.CA2215.severity = suggestion

# Type can be sealed (valid but low priority)
dotnet_diagnostic.CA1852.severity = suggestion

# Identifiers should not match keywords (false positives on domain terms)
dotnet_diagnostic.CA1716.severity = none

# Do not disable certificate validation (valid security warning, keep visible)
dotnet_diagnostic.CA5359.severity = suggestion

# Call GC.SuppressFinalize correctly
dotnet_diagnostic.CA1816.severity = suggestion

########################################
# SonarAnalyzer / SonarLint (Sonar rules are S####)
# Add/remove rules to match your SonarQube Quality Profile.
########################################

# TODO tags should not be left in code
dotnet_diagnostic.S1135.severity = warning

# Commented-out code should be removed
dotnet_diagnostic.S125.severity = suggestion

# Methods should not have too many parameters (max 7)
dotnet_diagnostic.S107.severity = warning

# Cognitive complexity of methods should not be too high
dotnet_diagnostic.S3776.severity = warning

# Unused private members should be removed (often noisy; keep as suggestion)
dotnet_diagnostic.S1144.severity = suggestion

# Method overloads should be adjacent (low-priority code organization)
dotnet_diagnostic.S4136.severity = suggestion

# Update method so implementation is not identical (valid but low priority)
dotnet_diagnostic.S4144.severity = suggestion

# Remove field and declare as local variable
dotnet_diagnostic.S1450.severity = suggestion

# Loops should be simplified using LINQ
dotnet_diagnostic.S3267.severity = suggestion

# Make method static
dotnet_diagnostic.S2325.severity = suggestion

# Extract nested ternary operation
dotnet_diagnostic.S3358.severity = suggestion

# Empty block of code
dotnet_diagnostic.S108.severity = suggestion

# Parameter name in ArgumentNullException
dotnet_diagnostic.S3928.severity = warning

# Logging level check
dotnet_diagnostic.S6672.severity = suggestion

# Unused type parameter
dotnet_diagnostic.S2326.severity = suggestion

# URI should not be hard-coded
dotnet_diagnostic.S1075.severity = suggestion

# Merge collapsible if statements
dotnet_diagnostic.S1066.severity = suggestion

# IDE1006 / Async suffix: async methods must end with 'Async'.
dotnet_diagnostic.IDE1006.severity = error

dotnet_naming_rule.async_methods_must_end_in_async.symbols = async_methods
dotnet_naming_rule.async_methods_must_end_in_async.style = async_suffix
dotnet_naming_rule.async_methods_must_end_in_async.severity = error

dotnet_naming_style.async_suffix.required_suffix = Async
dotnet_naming_style.async_suffix.capitalization = pascal_case

dotnet_naming_symbols.async_methods.applicable_kinds = method
dotnet_naming_symbols.async_methods.required_modifiers = async
dotnet_naming_symbols.async_methods.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected


########################################
# Optional: loosen Sonar a bit in tests
# Note: Async test methods must still use the Async suffix (naming rule applies).
########################################
[**/Migrations/*.cs]
# EF Core migrations are auto-generated; relax strict rules.
dotnet_diagnostic.IDE0005.severity = none
dotnet_diagnostic.IDE0055.severity = none
dotnet_diagnostic.IDE0058.severity = none

[**/*Tests*/**/*.cs]
dotnet_diagnostic.S1135.severity = suggestion
dotnet_diagnostic.S125.severity = none
dotnet_diagnostic.S107.severity = suggestion
dotnet_diagnostic.S3776.severity = suggestion
dotnet_diagnostic.S1144.severity = none
dotnet_diagnostic.CA1707.severity = none
dotnet_diagnostic.CA2208.severity = none

[*.md]
# Allow trailing whitespace in Markdown for hard line breaks.
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
# Two-space indent for data/config files.
indent_size = 2

[*.csproj]
# Keep project files compact.
indent_size = 2

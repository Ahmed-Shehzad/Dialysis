# Dialysis PDMS – Secrets Template
# Copy to secrets.env, fill in values, then: source secrets.env && ./create-secrets.sh
# Never commit secrets.env to version control.

# Required – Service Bus
export ServiceBus__ConnectionString="Endpoint=sb://..."

# Required – Auth (OIDC)
export Auth__Authority="https://login.microsoftonline.com/YOUR_TENANT/v2.0"
export Auth__Audience="api://your-app-id"

# Required – PostgreSQL (adjust per tenant/service)
export ConnectionStrings__Subscriptions="Host=postgres;Database=fhir_subscriptions;Username=postgres;Password=..."
export ConnectionStrings__Analytics="Host=postgres;Database=postgres;Username=postgres;Password=..."
export ConnectionStrings__DefaultConnection="Host=postgres;Database=dialysis_his;Username=postgres;Password=..."
export ConnectionStrings__Redis="redis:6379"

# Tenancy (if using per-tenant DBs)
export Tenancy__ConnectionStringTemplate="Host=postgres;Database=dialysis_audit_{TenantId};Username=postgres;Password=..."

# Optional – Public Health report delivery
# export PublicHealth__ReportDeliveryEndpoint="https://ph.example.gov/receive"

# Optional – Analytics / AuditConsent
# export Analytics__AuditConsentBaseUrl="https://audit-consent.internal"
# export Analytics__PublicHealthBaseUrl="https://public-health.internal"

# Optional – EHealth (when certified)
# export EHealth__De__ClientCertificate="<base64>"
# export EHealth__De__ClientCertificatePassword="..."
